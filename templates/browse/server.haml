-@title = "#{@server.name}"
%h1
  %a{:href => "/browse"} All Servers
  \>
  =@server.name
  
.grep=haml(:grep_form, :layout => false)

%h2 Browse
%ul
  -prev_year, prev_month = 0, 0
  -@server.each do |chatroom|
    %li
      %a{:href => "/browse/#{escape(@server.name)}/#{escape(chatroom.name)}"}=chatroom.name
      (#{chatroom.length} files)